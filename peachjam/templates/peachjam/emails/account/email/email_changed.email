{% extends 'peachjam/emails/layouts/base.html' %}
{% load i18n %}
{% block subject %}{% blocktrans trimmed %}Your email address has been changed{% endblocktrans %}{% endblock %}
{% block body %}
  <p>{% blocktrans trimmed %}This is a confirmation that the email address on your account has been changed.{% endblocktrans %}</p>
  <p>{% blocktrans trimmed %}It was updated from {{ from_email }} to {{ to_email }}.{% endblocktrans %}</p>
  <p>{% blocktrans trimmed %}If you didn't make this change, please secure your account immediately.{% endblocktrans %}</p>
  <p>{% blocktrans trimmed %}The {{ APP_NAME }} Team{% endblocktrans %}</p>
{% endblock %}
